# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to git

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-proj-...your_key_here

# ============================================
# Google API Configuration
# ============================================
GOOGLE_SHEETS_API_KEY=your_sheets_key_here
GOOGLE_DRIVE_API_KEY=your_drive_key_here
GOOGLE_APPLICATION_CREDENTIALS=credentials/google-credentials.json

# ============================================
# HubSpot Configuration
# ============================================
HUBSPOT_API_KEY=your_hubspot_key_here

# ============================================
# Slack Configuration
# ============================================
SLACK_API_TOKEN=xoxb-...your_token_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ============================================
# GitHub Configuration
# ============================================
GITHUB_TOKEN=ghp_...your_token_here

# ============================================
# Figma Configuration
# ============================================
FIGMA_ACCESS_TOKEN=figd_...your_token_here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/commercial_view

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=change-this-in-production
LOG_LEVEL=INFO

# ============================================
# Data Paths
# ============================================
COMMERCIAL_VIEW_DATA_PATH=./data

# ============================================
# API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
# =============================================================================
# GITHUB INTEGRATION
# =============================================================================  
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_1234567890abcdefghijklmnopqrstuvwxyz
GITHUB_REPOSITORY=Jeninefer/Commercial-View
GITHUB_BRANCH=main
GITHUB_TOKEN=ghp_...your_token_here

# =============================================================================
# MCP (Model Context Protocol) SERVERS
# =============================================================================
FIGMA_MCP_SERVER_URL=npx @figma/mcp-server-figma
COMMERCIAL_VIEW_MCP_URL=http://localhost:8000/mcp
GITHUB_MCP_SERVER_URL=npx @modelcontextprotocol/server-github

# =============================================================================
# API SECURITY
# =============================================================================
JWT_SECRET_KEY=your-256-bit-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

API_RATE_LIMIT_PER_MINUTE=100
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
ENABLE_CACHING=true

# =============================================================================
# FILE STORAGE & PROCESSING
# =============================================================================
UPLOAD_DIRECTORY=./data/uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.xlsx,.csv,.json,.pdf

# Data processing paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed  
DATA_EXPORTS_PATH=./data/exports

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn-here
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@commercial-view.com

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
PYTEST_ADDOPTS=--verbose --tb=short
BLACK_LINE_LENGTH=88
MYPY_STRICT_MODE=true

# Hot reload for development
UVICORN_RELOAD=true
UVICORN_RELOAD_DIRS=src,scripts
