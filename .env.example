# ============================================
# GOOGLE DRIVE & SHEETS CONFIGURATION
# ============================================
GOOGLE_DRIVE_FOLDER_URL=https://drive.google.com/drive/folders/your-folder-id
GOOGLE_SHEETS_ID=your-google-sheets-id

# ============================================
# AI MODEL API KEYS
# ============================================
# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Cloud Project ID (for Gemini/Vertex AI)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# ============================================
# HUBSPOT CONFIGURATION
# ============================================
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-portal-id

# ============================================
# ATOMCHAT CONFIGURATION
# ============================================
ATOMCHAT_API_KEY=your-atomchat-api-key
ATOMCHAT_APP_ID=your-atomchat-app-id

# ============================================
# EMAIL NOTIFICATIONS
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
NOTIFICATION_EMAIL_FROM=noreply@yourdomain.com
NOTIFICATION_EMAIL_TO=team@yourdomain.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Daily job schedule (cron format: "0 8 * * *" = 8:00 AM daily)
DAILY_JOB_TIME=08:00
TIMEZONE=America/Mexico_City

# Dashboard configuration
DASHBOARD_PORT=8501
ENABLE_VIEW_ONLY_ROLE=true

# Output configuration
OUTPUT_FORMAT=csv
OUTPUT_DESTINATION=google_drive
FIRMA_CODE_SHEET_ID=your-firma-code-sheet-id

# ============================================
# OPTIMIZATION PARAMETERS
# ============================================
# KPI weights for multi-objective optimization (must sum to 1.0)
WEIGHT_APR=0.25
WEIGHT_ROTATION_SPEED=0.20
WEIGHT_CONCENTRATION_RISK=0.20
WEIGHT_MOM_GROWTH=0.20
WEIGHT_DPD_MINIMIZATION=0.15

# Risk thresholds
MAX_CLIENT_CONCENTRATION=0.15
MAX_SECTOR_CONCENTRATION=0.30
MAX_DPD_TOLERANCE=30

# ============================================
# BRAND CONFIGURATION
# ============================================
PRIMARY_COLOR_DARK=#030E19
PRIMARY_COLOR_PURPLE=#221248
NEUTRAL_GREY_DARK=#6D7D8E
NEUTRAL_GREY_MID=#9EA9B3
NEUTRAL_GREY_LIGHT=#CED4D9
CONTRAST_WHITE=#FFFFFF
