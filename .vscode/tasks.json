{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run API Server",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"uvicorn",
				"run:app",
				"--reload"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"pytest",
				"tests/",
				"-v"
			],
			"problemMatcher": []
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/pip",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"problemMatcher": []
		}
	]
}